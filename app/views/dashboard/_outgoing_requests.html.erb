
<div class="container">
  <div class="col mb-5">
    <div class="mb-50">

  <% my_requests.each do |request| %>
    <div class="card-product">
      <% if request.instrument.photo.attached? %>
         <%= cl_image_tag request.instrument.photo.key, class: 'card-product image', crop: :fill%>
      <% else %>
        <%= image_tag 'instrument-placeholder.jpg', class: 'card-product image' %>
      <% end %>
      <!-- <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" /> -->
        <div class="card-product-infos">
          <h2><%= request.instrument.name %></h2>
            <p>
              Date: <strong><%= request.start_date  %>
              till <%= request.end_date %></strong>
            </p>
            <p>Owners name: <%= request.instrument.user.first_name%></p>
            <% if request.status == "accepted" %>
            <p>Request accepted</p>
            <% elsif request.status == "declined" %>
            <p>Request declined</p>
            <% else %>
            <p>Pending</p>
            <% end %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>

