<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
  <div class="row" style="border: solid; padding: 20px;">
    <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
     <div class="well profile">
      <div class="col-sm-12 d-flex">
        <div class="col-xs-12 col-sm-8">
          <h2><%= "#{current_user.first_name} #{current_user.last_name}" %></h2>
          <p><strong> <%= current_user.email %> </strong>  </p>
          <p><strong>Instruments: </strong>
            <span class="tags"> Guitar </span>

          </p>
        </div>
        <div class="col-xs-12 col-sm-4 text-center">
          <figure>
            <img src="http://www.localcrimenews.com/wp-content/uploads/2013/07/default-user-icon-profile.png" alt="" class="img-circle img-responsive">
            <figcaption class="ratings">
              <p>Ratings
                <a href="#">
                  <span class="fa fa-star"></span>
                </a>
                <a href="#">
                  <span class="fa fa-star"></span>
                </a>
                <a href="#">
                  <span class="fa fa-star"></span>
                </a>
                <a href="#">
                  <span class="fa fa-star"></span>
                </a>
                <a href="#">
                 <span class="fa fa-star-o"></span>
               </a>
             </p>
           </figcaption>
         </figure>
       </div>
     </div>
     <div class="col-xs-12 divider text-center d-flex">
      <div class="col-xs-12 col-sm-4 emphasis">
        <h2><strong>+</strong></h2>
        <p><small>Create advertise</small></p>
        <button class="btn btn-primary btn-block"><span class="fa fa-plus-square"></span> Rent out </button>
      </div>
      <div class="col-xs-12 col-sm-4 emphasis">
        <h2><strong><%= current_user.requests.count %></strong></h2>
        <p><small>Requests sent</small></p>
        <button class="btn btn-success btn-block"><span class="fa fa-plus-square"></span> My requests </button>
      </div>
      <div class="col-xs-12 col-sm-4 emphasis">
        <h2><strong>2</strong></h2>
        <p><small>Requests received</small></p>
        <button class="btn btn-info btn-block"><span class="fa fa-user-square"></span> Received </button>
      </div>
    </div>
  </div>
</div>
</div>


