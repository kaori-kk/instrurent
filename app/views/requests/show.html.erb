<div class="request-show">
  <h1>Thank you for your Request!</h1>
  <div class="product-pic">
    <% if @instrument.photo.attached? %>
    <%= cl_image_tag @instrument.photo.key, class: "request-img", height: 200, width: 300, crop: :fill %>
    <% end %>
    <div class="details">
      <h2>Name:</h2>
      <p><%= @instrument.name %></p>
      <h2>Description:</h2>
      <p><%= @instrument.description %></p>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="form new col-8 offset-2 bg-white color-white">
      <%= simple_form_for [@request, @review] do |f| %>
      <%= f.input :instrument_review %>
      <%= f.input :instrument_stars %>
      <%= f.submit "Review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
