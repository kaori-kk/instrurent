<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="navbar-left-items">
    <%= link_to instruments_path do %>
      <%= image_tag "guitar.jpg", class: 'navbar-logo' %>
    <% end %>
    <%= simple_form_for :instrument, url: instruments_path, method: :get do |f| %>
      <%= f.input :name, label: false, input_html: {size:"20", maxlength:"30", autofocus: true, placeholder: "Search", class: "search-bar"} %>
    <% end %>
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item dropdown">
        <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Rent Your Instrument", new_instrument_path, class: 'dropdown-item' %>
          <%= link_to "Dashboard", profile_path ,class: 'dropdown-item'%>
          <%= link_to "Sign out", destroy_user_session_path, class: 'dropdown-item', method: :delete %>
        </div>
      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to "Log in", user_session_path, class: 'nav-bar-button' %>
      </li>
      <li class="nav-item">
        <%= link_to "Sign Up", new_user_registration_path, class: 'nav-bar-button' %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
