<!-- SEARCH FORM LANDING PAGE -->
<div class="banner">
  <div class="banner-container">
    <h1><strong>Play your music</strong><br>Anywhere. Anytime.</h1>
      <div class="form-container bg-white color-white">
        <div class="main-form">
          <%= simple_form_for :instrument, url: instruments_path, method: :get do |f| %>
          <%= f.input :name, label: 'Find your instrument' %>
          <%= f.submit "Search", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
  </div>
</div>

<div class="container">
    <div class="message-container">
      <div class="messages">
        <h2>Do you have an instrument<br>you don't use anymore?</h2>
        <h3>Why not <strong>share</strong> with others and <strong>earn</strong> profit?</h3>
      </div>
      <%= image_tag "picture2.png", width: 500, height: 300, crop: :fill, class: 'messages-img' %>
    </div>

    <div class="message-container">
      <%= image_tag "picture1.png", width: 500, height: 300, crop: :fill, class: 'messages-img' %>

      <div class="messages">
        <h2 id="message-h2-tag">Easy to rent your instrument</h2>
        <h3></h3>
      </div>
    </div>
</div>




<!-- CARDS LANDING PAGE -->
<div class="cards-container">
  <% @instruments.each do |instrument| %>
    <div class="instrument-card">
      <% if instrument.photo.attached? %>
        <%= cl_image_tag instrument.photo.key, class: 'instrument-img', height: 200, width: 350, crop: :fill %>
      <% else %>
        <%= image_tag 'instrument-placeholder.jpg', class: 'instrument-img' %>
      <% end %>

      <div class="card-details">
        <div class="card-instrument-infos">
          <%= link_to instrument.name, instrument_path(instrument), class: 'instrument-name' %>
           <h2 class="card-instument-pricing"><%= instrument.price %>â‚¬</h2>

        </div>

        <div class="card-instrument-details">
          <p><%= instrument.description %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>



