      <% end %>
    </div>
  </div>
  <h2 id="headline">Instruments to borrow</h2>
</div>




<!-- CARDS LANDING PAGE -->
<div class="cards-container">
  <% @instruments.each do |instrument| %>
  <div class="instrument-card">
    <% if instrument.photo.attached? %>
    <%= cl_image_tag instrument.photo.key, class: 'instrument-img', height: 200, width: 350, crop: :fill %>
    <% else %>
    <%= image_tag 'instrument-placeholder.jpg', class: 'instrument-img' %>
    <% end %>

    <div class="card-details">
      <div class="card-instrument-infos">
        <%= link_to instrument.name, instrument_path(instrument), class: 'instrument-name' %>
        <h2 class="card-instument-pricing"><%= instrument.price %>â‚¬</h2>

      </div>

      <div class="card-instrument-details">
        <p><%= instrument.description %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>



