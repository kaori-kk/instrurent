<div class="banner-owner">
  <div class="banner-owner-container">
    <h2 id="rent_instrument"><strong>Got an Instrument?</strong><br>Share with others.</h2>
    <div class="form-owner-container bg-white color-white">
      <div class="renting-form">
        <%= simple_form_for @instrument do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :photo, as: :file %>
        <%= f.submit "Add Instrument", class: "btn btn-dark" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
    <div class="message-container">
      <div class="messages">
        <h2>Easy to <strong>rent out</strong> your Instrument</h2>
        <h3>Sign up and start listing.</h3>
      </div>

      <%= image_tag "landing2-pic1.png", width: 500, height: 350, crop: :fill, class: 'messages-img' %>
    </div>

    <div class="message-container">
      <%= image_tag "landing2-pic2.png", width: 500, height: 350, crop: :fill, class: 'messages-img' %>

      <div class="messages">
        <h2 id="message-h2-tag">Share with the world</h2>
        <h3>Let other people enjoy your old bongo for example</h3>
      </div>
    </div>
</div>

